{
  "vim.leader": "<space>",
  "vim.useCtrlKeys": true,
  "vim.handleKeys": {
    "<C-h>": false,
    "<C-j>": false,
    "<C-k>": false,
    "<C-l>": false
  },
  "vim.insertModeKeyBindings": [
    { "before": ["j", "j"], "after": ["<Esc>"] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["g","d"], "commands": ["editor.action.revealDefinition"], "silent": true },
    { "before": ["g","r"], "commands": ["editor.action.goToReferences"], "silent": true },
    { "before": ["g","i"], "commands": ["editor.action.goToImplementation"], "silent": true },
    { "before": ["g","t"], "commands": ["editor.action.goToTypeDefinition"], "silent": true },
    { "before": ["g","D"], "commands": ["editor.action.revealDeclaration"], "silent": true },
    { "before": ["K"], "commands": ["editor.action.showHover"], "silent": true },

    { "before": ["<leader>","f","f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>","f","g"], "commands": ["workbench.action.findInFiles"] },
    { "before": ["<leader>","f","r"], "commands": ["workbench.action.openRecent"] },
    { "before": ["<leader>","f","b"], "commands": ["workbench.action.showAllEditors"] },

    { "before": ["<leader>","s","s"], "commands": ["workbench.action.showAllSymbols"] },
    { "before": ["<leader>","s","d"], "commands": ["workbench.actions.view.problems"] },

    { "before": ["<leader>","b","b"], "commands": ["workbench.action.showAllEditors"] },
    { "before": ["<leader>","b","d"], "commands": ["workbench.action.closeActiveEditor"] },

    { "before": ["<leader>","w","v"], "commands": ["workbench.action.splitEditorRight"] },
    { "before": ["<leader>","w","s"], "commands": ["workbench.action.splitEditorDown"] },
    { "before": ["<leader>","w","d"], "commands": ["workbench.action.closeGroup"] },
    { "before": ["<leader>","w","m"], "commands": ["workbench.action.maximizeEditor"] },

    { "before": ["<leader>","t","t"], "commands": ["workbench.action.terminal.toggleTerminal"] },
    { "before": ["<leader>","t","n"], "commands": ["workbench.action.nextEditor"] },
    { "before": ["<leader>","t","p"], "commands": ["workbench.action.previousEditor"] },

    { "before": ["<leader>","l","a"], "commands": ["editor.action.codeAction"] },
    { "before": ["<leader>","l","r"], "commands": ["editor.action.rename"] },
    { "before": ["<leader>","l","f"], "commands": ["editor.action.formatDocument"] },
    { "before": ["<leader>","l","d"], "commands": ["workbench.actions.view.problems"] },

    { "before": ["<leader>","g","s"], "commands": ["workbench.view.scm"] },
    { "before": ["<leader>","g","l"], "commands": ["git.showAllHistory"] },

    { "before": ["<leader>","x","x"], "commands": ["workbench.actions.view.problems"] },
    { "before": ["<leader>","x","q"], "commands": ["workbench.action.togglePanel"] },

    { "before": ["<leader>","u","z"], "commands": ["workbench.action.toggleZenMode"] },
    { "before": ["<leader>","u","m"], "commands": ["editor.action.toggleMinimap"] },
    { "before": ["<leader>","u","w"], "commands": ["editor.action.toggleWordWrap"] },
    { "before": ["<leader>","u","s"], "commands": ["workbench.action.toggleSidebarVisibility"] },

    { "before": ["<leader>","e","e"], "commands": ["workbench.view.explorer"] },
    { "before": ["<leader>","e","E"], "commands": ["workbench.files.action.showActiveFileInExplorer"] }
  ],

  "whichkey.bindings": [
    {
      "key": " ",
      "name": "Root",
      "type": "bindings",
      "bindings": [
        { "key": "f", "name": "+find", "type": "bindings", "bindings": [
          { "key": "f", "name": "Find files", "type": "command", "command": "workbench.action.quickOpen" },
          { "key": "g", "name": "Grep", "type": "command", "command": "workbench.action.findInFiles" },
          { "key": "r", "name": "Recent files", "type": "command", "command": "workbench.action.openRecent" },
          { "key": "b", "name": "Buffers", "type": "command", "command": "workbench.action.showAllEditors" }
        ] },
        { "key": "s", "name": "+search", "type": "bindings", "bindings": [
          { "key": "s", "name": "Workspace symbols", "type": "command", "command": "workbench.action.showAllSymbols" },
          { "key": "d", "name": "Diagnostics", "type": "command", "command": "workbench.actions.view.problems" }
        ] },
        { "key": "b", "name": "+buffers", "type": "bindings", "bindings": [
          { "key": "b", "name": "Switch buffer", "type": "command", "command": "workbench.action.showAllEditors" },
          { "key": "d", "name": "Delete buffer", "type": "command", "command": "workbench.action.closeActiveEditor" }
        ] },
        { "key": "w", "name": "+windows", "type": "bindings", "bindings": [
          { "key": "v", "name": "Split right", "type": "command", "command": "workbench.action.splitEditorRight" },
          { "key": "s", "name": "Split below", "type": "command", "command": "workbench.action.splitEditorDown" },
          { "key": "d", "name": "Close group", "type": "command", "command": "workbench.action.closeGroup" },
          { "key": "m", "name": "Toggle zoom", "type": "command", "command": "workbench.action.maximizeEditor" }
        ] },
        { "key": "t", "name": "+tabs/term", "type": "bindings", "bindings": [
          { "key": "t", "name": "Toggle terminal", "type": "command", "command": "workbench.action.terminal.toggleTerminal" },
          { "key": "n", "name": "Next tab", "type": "command", "command": "workbench.action.nextEditor" },
          { "key": "p", "name": "Prev tab", "type": "command", "command": "workbench.action.previousEditor" }
        ] },
        { "key": "l", "name": "+lsp", "type": "bindings", "bindings": [
          { "key": "a", "name": "Code action", "type": "command", "command": "editor.action.codeAction" },
          { "key": "r", "name": "Rename", "type": "command", "command": "editor.action.rename" },
          { "key": "f", "name": "Format", "type": "command", "command": "editor.action.formatDocument" },
          { "key": "d", "name": "Diagnostics", "type": "command", "command": "workbench.actions.view.problems" }
        ] },
        { "key": "g", "name": "+git", "type": "bindings", "bindings": [
          { "key": "s", "name": "Source Control", "type": "command", "command": "workbench.view.scm" },
          { "key": "l", "name": "Log", "type": "command", "command": "git.showAllHistory" }
        ] },
        { "key": "x", "name": "+diagnostics", "type": "bindings", "bindings": [
          { "key": "x", "name": "Problems", "type": "command", "command": "workbench.actions.view.problems" },
          { "key": "q", "name": "Toggle panel", "type": "command", "command": "workbench.action.togglePanel" }
        ] },
        { "key": "u", "name": "+ui", "type": "bindings", "bindings": [
          { "key": "z", "name": "Zen mode", "type": "command", "command": "workbench.action.toggleZenMode" },
          { "key": "m", "name": "Minimap", "type": "command", "command": "editor.action.toggleMinimap" },
          { "key": "w", "name": "Wrap", "type": "command", "command": "editor.action.toggleWordWrap" },
          { "key": "s", "name": "Sidebar", "type": "command", "command": "workbench.action.toggleSidebarVisibility" }
        ] },
        { "key": "e", "name": "+explorer", "type": "bindings", "bindings": [
          { "key": "e", "name": "Explorer", "type": "command", "command": "workbench.view.explorer" },
          { "key": "E", "name": "Reveal file", "type": "command", "command": "workbench.files.action.showActiveFileInExplorer" }
        ] }
      ]
    }
  ]
}
