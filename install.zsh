  if [[ -d "$DOTFILES/config/zellij" ]]; then
    ensure_dir "$XDG_CONFIG_HOME/zellij"
    make_link "$DOTFILES/config/zellij/config.kdl" "$XDG_CONFIG_HOME/zellij/config.kdl"
  fi
}

