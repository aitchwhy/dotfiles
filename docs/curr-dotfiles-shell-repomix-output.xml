function cp_repo() {
  local FROM_DIR="$1"
  [[ ! -d ~/src/ant ]] && mkdir -p ~/src/ant
  rsync -av \
    --recursive \
    --exclude=".git*" \
    --exclude=".github" \
    --exclude="node_modules" \
    --exclude=".venv" \
    --exclude=".gitignore" \
    --exclude=".pytest_cache" \
    --exclude=".obsidian" \
    --exclude=".ruff_cache" \
    --exclude=".venv" \
    --exclude=".DS*" \
    --progress \
    "$FROM_DIR" ~/src/ant/"$(basename "$FROM_DIR")"
}

function generate_ssh() {
