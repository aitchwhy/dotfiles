    ssh-keygen -t ed25519 -C "$1" -f ~/.ssh/id_ed25519_new

    echo -e "\n=== Copy these to Bitwarden ===\n"
    echo "PRIVATE KEY:"
    cat ~/.ssh/id_ed25519_new
