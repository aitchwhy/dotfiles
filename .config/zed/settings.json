// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
//
{
  "context_servers": {
    "mcp-server-context7": {
      "settings": {
        "default_minimum_tokens": "10000"
      }
    },
    "mcp-server-github": {
      "settings": {
        "github_personal_access_token": "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"
      }
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "model_parameters": [],
    "default_profile": "write",
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false
  },
  "tab_bar": {
    "show": true
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_line_height": { "custom": 1.3 },
  "current_line_highlight": "all",
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "Catppuccin Macchiato"
  },
  "scrollbar": {
    "show": "never",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "jupyter": {
    "kernel_selections": {
      "python": "conda-env",
      "typescript": "node",
      "javascript": "node",
      "r": "ark"
    }
  },
  "languages": {
    "Markdown": {
      "format_on_save": "on",
      "remove_trailing_whitespace_on_save": true
    },
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          // Change `--indent 2` to match your preferred tab_size
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"]
        }
      }
    },
    "Nix": {
      "language_servers": ["nixd"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Python": {
      "language_servers": ["pylsp", "ruff"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "language_servers": ["vtsls", "tsserver", "prettier", "!eslint"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "language_servers": ["vtsls", "tsserver", "prettier", "!eslint"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "language_servers": ["vtsls", "tsserver", "prettier", "!eslint"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },
  "multi_key_binding_delay": 200, // ms  â€“ introduced in PR #28576
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": true,
          "format": {
            "singleQuote": true
          },
          "schemas": {
            "url": "https://www.schemastore.org/api/json/catalog.json"
          }
        }
      }
    },
    "vtls": {
      "settings": {
        "typescript": { "tsserver": { "maxTsServerMemory": 16184 } },
        "javascript": { "tsserver": { "maxTsServerMemory": 16184 } }
      }
    },
    "gopls": {
      "settings": {
        "diagnostics": {
          "suppress": ["sema-extra-width"]
        }
      }
    },
    "nixd": {
      "settings": {
        "diagnostics": {
          "suppress": ["sema-extra-width"]
        }
      }
    },
    "pylsp": {
      "settings": {
        "pylsp.plugins.pylsp_django": {
          "enabled": true
        },
        "pylsp.plugins.jedi_completion": {
          "include_params": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": { "preview": true }
      }
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inline_code_actions": true,
  "use_smartcase_search": false,
  "search": {
    "whole_word": true,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  "completions": {
    // Show buffer words immediately
    "words": "fallback",
    // merge in LSP once ready
    "lsp": true,
    // drop LSP items if they lag
    "lsp_fetch_timeout_ms": 100,
    "lsp_insert_mode": "replace_suffix"
  },
  "show_completion_documentation": true,
  "show_completions_on_input": true
}
