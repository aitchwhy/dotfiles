  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-thinking-latest"
    },
    "model_parameters": [],
    "default_profile": "write",
    "version": "2"
  },
  "telemetry": {
    "diagnostics": true
  },
  "tab_bar": {
    "show": true
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_line_height": { "custom": 1.3 },
  "current_line_highlight": "line",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  "scrollbar": {
    "show": "never",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "jupyter": {
    "kernel_selections": {
      "python": "conda-env",
      "typescript": "node",
      "javascript": "node",
      "r": "ark"
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pylsp", "ruff"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Typescript": {
      "language_servers": ["vtsls", "tsserver", "prettier", "!eslint"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "language_servers": ["vtsls", "tsserver", "prettier", "!eslint"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "language_servers": ["vtsls", "tsserver", "prettier", "!eslint"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },
  "use_smartcase_search": true,
  "lsp": {
    "pylsp": {
      "settings": {
        "pylsp.plugins.pylsp_django": {
          "enabled": true
        },
        "pylsp.plugins.jedi_completion": {
          "include_params": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {}
      }
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "search": {
    "whole_word": true,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  "completions": {
    "words": "fallback",
    "lsp": true,
    "lsp_fetch_timeout_ms": 0,
    "lsp_insert_mode": "replace_suffix"
  }
}
