{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bear",
  "title": "Bear Notes",
  "description": "Control Bear with Raycast",
  "icon": "command-icon.png",
  "author": "hmarr",
  "contributors": [
    "lucaschultz",
    "diokhan",
    "ron-myers",
    "JuanBanchero",
    "ramsay",
    "stelo",
    "thomaslombart",
    "xmok"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Notes",
      "subtitle": "Bear",
      "description": "Search and open Bear notes",
      "mode": "view"
    },
    {
      "name": "new-note",
      "title": "Create Note",
      "subtitle": "Bear",
      "description": "Create a new Bear note",
      "mode": "view",
      "preferences": [
        {
          "default": "main",
          "description": "Choose default opening mode when creating a new note",
          "label": "Open new notes in",
          "name": "newNoteOpenMode",
          "required": false,
          "title": "Opening Notes",
          "type": "dropdown",
          "data": [
            {
              "title": "Don't Open Note",
              "value": "no"
            },
            {
              "title": "In Main Window",
              "value": "main"
            },
            {
              "title": "In New Window",
              "value": "new"
            }
          ]
        },
        {
          "default": false,
          "description": "When creating a new note, prepend time and date",
          "label": "Prepend time and date",
          "name": "prependTimeAndDate",
          "required": false,
          "type": "checkbox"
        },
        {
          "default": false,
          "description": "When creating a new note, pin the note",
          "label": "Pin note in notes list",
          "name": "pinNote",
          "required": false,
          "type": "checkbox"
        }
      ]
    },
    {
      "name": "grab-url",
      "title": "Web Capture",
      "subtitle": "Bear",
      "description": "Create a new Bear note from a web capture",
      "mode": "view"
    },
    {
      "name": "menu-bar",
      "title": "Menu Bar Notes",
      "subtitle": "Bear",
      "description": "View your recent Bear notes in the menu bar.",
      "mode": "menu-bar"
    }
  ],
  "preferences": [
    {
      "default": false,
      "description": "Opens the note in edit mode, placing the cursor at the end of the note",
      "label": "Focus cursor at end of the note",
      "name": "focusCursorAtEnd",
      "required": false,
      "title": "Opening Notes",
      "type": "checkbox"
    },
    {
      "default": true,
      "description": "Shows a preview of the note to the right of the note list",
      "label": "Show preview in list view",
      "name": "showPreviewInListView",
      "required": false,
      "title": "Notes List",
      "type": "checkbox"
    }
  ],
  "tools": [
    {
      "name": "search-notes",
      "title": "Search Notes",
      "description": "Search Bear notes",
      "input": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "The text to search for. If there is no text, pass an empty string."
          },
          "tag": {
            "type": "string",
            "description": "The tag assigned to the note. Tag can also be in the form of '#tag' where '#' is removed when passing input."
          }
        },
        "required": [
          "text"
        ]
      },
      "confirmation": false
    },
    {
      "name": "new-note",
      "title": "New Note",
      "description": "Create Note in Bear",
      "input": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the note. If there is no title, set as empty string."
          },
          "text": {
            "type": "string",
            "description": "The content of the note."
          },
          "tags": {
            "type": "string",
            "description": "List of tags to assign to note. If there are multiple tags, join them using comma."
          }
        },
        "required": [
          "title",
          "text"
        ]
      },
      "confirmation": true
    }
  ],
  "ai": {
    "evals": [
      {
        "input": "@bear search for note with tag bear/welcome",
        "mocks": {
          "search-notes": [
            {
              "id": "SFNote2Intro3",
              "title": "Welcome to Bear ðŸ‘‹",
              "text": "# Welcome to Bear ðŸ‘‹\n...",
              "pinned": true,
              "tags": [
                "bear/welcome",
                "bear"
              ],
              "formattedTags": "#bear/welcome"
            },
            {
              "id": "78471A46-55B3-417F-AC3F-7D60F581F0F9",
              "title": "Get started with Bear",
              "text": "# Get started with Bear \n\n![]...",
              "pinned": false,
              "tags": [
                "bear/welcome",
                "bear"
              ],
              "formattedTags": "#bear/welcome"
            }
          ]
        },
        "expected": [
          {
            "callsTool": {
              "arguments": {
                "tag": "bear/welcome"
              },
              "name": "search-notes"
            }
          }
        ]
      },
      {
        "expected": [
          {
            "callsTool": {
              "arguments": {
                "title": {
                  "includes": "Shopping"
                },
                "text": {
                  "includes": "milk"
                },
                "tags": [
                  {
                    "includes": "reminder"
                  },
                  {
                    "includes": "shopping"
                  }
                ]
              },
              "name": "new-note"
            }
          },
          {
            "meetsCriteria": "milk"
          }
        ],
        "input": "@bear create note about needing to buy milk",
        "mocks": {
          "new-note": "Successfully called \"new-note\""
        }
      }
    ]
  },
  "dependencies": {
    "@raycast/api": "^1.90.0",
    "commonmark": "^0.31.0",
    "date-fns": "^3.6.0",
    "open": "^8.4.2",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/commonmark": "^0.27.9",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/sql.js": "^1.4.9",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix"
  }
}