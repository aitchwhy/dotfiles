{
  "name": "@dotfiles/system",
  "version": "1.0.0",
  "type": "module",
  "description": "Prompt-as-Code system - typed AI prompts and rules",
  "scripts": {
    "build": "bun run src/build.ts",
    "build:watch": "bun run src/build.ts --watch",
    "build:dry": "bun run src/build.ts --dry-run",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "test": "bun test",
    "validate": "bun run typecheck && bun run lint && bun test"
  },
  "dependencies": {
    "zod": "^4.1.13",
    "effect": "^3.19.9",
    "@effect/platform": "^0.93.6",
    "@effect/platform-node": "^0.103.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.2.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.4"
  }
}
