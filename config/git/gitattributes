# Auto detect text files and perform LF normalization
* text=auto

# Force specific file formats to have specific line endings
*.txt text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.rb text eol=lf
*.sh text eol=lf
*.zsh text eol=lf
*.bash text eol=lf
*.pl text eol=lf
*.java text eol=lf
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.go text eol=lf
*.rs text eol=lf
*.swift text eol=lf
*.php text eol=lf
*.sql text eol=lf
*.toml text eol=lf
*.lua text eol=lf
Makefile text eol=lf
Dockerfile text eol=lf

# Treat these files as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.dmg binary
*.app binary

# macOS specific files
*.plist text diff=plist
*.strings text diff=strings
*.pbxproj merge=union

# Scripts should have executable bit set
*.sh text eol=lf executable
*.zsh text eol=lf executable
*.bash text eol=lf executable
*.py text eol=lf executable
*.rb text eol=lf executable
*.pl text eol=lf executable

# Xcode and Swift settings
*.pbxproj binary merge=union
*.storyboard binary merge=union
*.xib binary merge=union

# Diff improvements
*.c diff=cpp
*.h diff=cpp
*.cpp diff=cpp
*.hpp diff=cpp
*.cs diff=csharp
*.m diff=objc
*.mm diff=objc
*.swift diff=swift
*.go diff=golang
*.rs diff=rust
*.php diff=php
*.py diff=python
*.rb diff=ruby
*.java diff=java
*.html diff=html
*.md diff=markdown
*.css diff=css
*.json diff=json
*.xml diff=xml

# Handle Apple Properties List files correctly
*.plist diff=plist

# Handle macOS property files correctly
.DS_Store binary
