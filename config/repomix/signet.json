{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "output": {
    "filePath": "repomix-signet.xml",
    "style": "xml",
    "parsableStyle": true,
    "compress": true,
    "showLineNumbers": false,
    "headerText": "# Signet CLI Context\n\nCode generation platform with hexagonal architecture.\nStack: Bun + Effect-TS + ast-grep + OXC"
  },
  "include": [
    "config/quality/src/**/*.ts",
    "config/quality/package.json",
    "config/quality/tsconfig.json",
    "config/quality/biome.json",
    "config/quality/versions.json"
  ],
  "ignore": {
    "customPatterns": [
      "**/node_modules/**",
      "**/*.d.ts",
      "**/__tests__/**",
      "**/tests/**"
    ]
  }
}
