{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "output": {
    "filePath": "repomix-agents.xml",
    "style": "xml",
    "parsableStyle": true,
    "compress": true,
    "showLineNumbers": false,
    "headerText": "# Agent System Context\n\nClaude Code configuration: hooks, skills, commands, agents.\nEnforces December 2025 patterns across all projects."
  },
  "include": [
    "config/quality/**/*.ts",
    "config/quality/**/*.md",
    "config/quality/**/*.json",
    "config/quality/**/*.sh"
  ],
  "ignore": {
    "customPatterns": [
      "**/*.test.ts",
      "**/node_modules/**"
    ]
  }
}
