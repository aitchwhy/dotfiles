{
  "name": "@dotfiles/quality",
  "version": "3.0.0",
  "type": "module",
  "description": "Quality System - TypeScript-first code quality enforcement for Claude Code",
  "scripts": {
    "postinstall": "command -v bun2nix >/dev/null && bun2nix -o bun.nix || true",
    "generate": "bun run src/generate.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "validate": "bun run typecheck && bun run lint && bun test"
  },
  "dependencies": {
    "effect": "3.19.9",
    "@effect/platform": "0.93.6",
    "@effect/platform-node": "0.103.0",
    "@effect/platform-bun": "0.87.0",
    "@ast-grep/napi": "0.33.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "engines": {
    "bun": ">=1.3.4"
  }
}
