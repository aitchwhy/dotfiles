{
  "name": "@dotfiles/quality",
  "version": "3.0.0",
  "type": "module",
  "description": "Quality System - TypeScript-first code quality enforcement for Claude Code",
  "scripts": {
    "postinstall": "command -v bun2nix >/dev/null && bun2nix -o bun.nix || true",
    "generate": "bun run src/generate.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "lint": "oxlint --type-aware --type-check --ignore-pattern 'node_modules/**'",
    "check": "bun run format:check && bun run lint",
    "validate": "bun run check && bun test"
  },
  "dependencies": {
    "@ast-grep/napi": "0.33.1",
    "@effect/platform": "0.93.6",
    "@effect/platform-bun": "0.87.0",
    "@effect/platform-node": "0.103.0",
    "effect": "3.19.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "1.2.14",
    "oxlint": "1.35.0",
    "oxlint-tsgolint": "0.10.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "engines": {
    "bun": ">=1.3.4"
  }
}
