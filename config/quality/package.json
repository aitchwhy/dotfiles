{
  "name": "@dotfiles/signet",
  "version": "2.0.0",
  "type": "module",
  "description": "Signet - Generate formally consistent software systems with hexagonal architecture (SSOT Dec 2025)",
  "scripts": {
    "postinstall": "command -v bun2nix >/dev/null && bun2nix -o bun.nix || true",
    "dev": "bun run --watch src/cli.ts",
    "start": "bun run src/cli.ts",
    "mcp": "bun run src/mcp-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:ast": "ast-grep scan",
    "test:rules": "ast-grep test",
    "validate": "bun run typecheck && bun run lint && bun run lint:ast && bun test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.12.1",
    "effect": "3.19.9",
    "@effect/cli": "0.72.1",
    "@effect/platform": "0.93.6",
    "@effect/platform-node": "0.103.0",
    "@effect/platform-bun": "0.86.0",
    "@effect/printer": "0.47.0",
    "@effect/printer-ansi": "0.47.0",
    "zod": "4.1.13",
    "handlebars": "4.7.8",
    "@ast-grep/napi": "0.33.1",
    "oxc-parser": "0.101.0",
    "yaml": "2.7.0"
  },
  "devDependencies": {
    "@ast-grep/cli": "0.40.0",
    "@biomejs/biome": "2.3.8",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.2.10",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.3.4"
  },
  "trustedDependencies": [
    "@ast-grep/cli"
  ]
}
