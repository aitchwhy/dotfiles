{
  "name": "@dotfiles/quality",
  "version": "5.0.0",
  "type": "module",
  "description": "Quality System - SSOT for TypeScript tooling and templates",
  "scripts": {
    "generate": "bun run src/generate.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "lint": "oxlint --ignore-pattern 'node_modules/**'",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run format:check && bun run lint",
    "validate": "bun run check && bun test",
    "sync-versions": "bun run sync-versions.ts"
  },
  "dependencies": {
    "@ast-grep/napi": "0.40.3",
    "@effect/platform": "0.94.0",
    "@effect/platform-bun": "0.87.0",
    "effect": "3.19.13",
    "js-yaml": "4.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.2.14",
    "@types/js-yaml": "4.0.9",
    "oxlint": "1.35.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "engines": {
    "bun": ">=1.3.4"
  }
}
