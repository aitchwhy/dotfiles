{
  "name": "@dotfiles/quality",
  "version": "5.1.0",
  "type": "module",
  "description": "Quality System - SSOT for TypeScript tooling and templates",
  "scripts": {
    "generate": "bun run src/generate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "oxlint --ignore-pattern 'node_modules/**'",
    "typecheck": "bunx @typescript/native-preview@7.0.0-dev.20260130.1 --noEmit",
    "check": "bun run typecheck && bun run format:check && bun run lint",
    "validate": "bun run check && bun run test",
    "sync-versions": "bun run sync-versions.ts",
    "ci": "bun src/ci/index.ts"
  },
  "dependencies": {
    "@ast-grep/napi": "0.40.3",
    "@effect/platform": "0.94.0",
    "@effect/platform-bun": "0.87.0",
    "effect": "3.19.14",
    "js-yaml": "4.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@playwright/test": "1.57.0",
    "@types/js-yaml": "4.0.9",
    "bun-types": "1.2.14",
    "oxlint": "1.36.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "engines": {
    "bun": ">=1.3.4"
  }
}
