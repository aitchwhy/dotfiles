{
  "_comment": "SSOT monorepo root package.json (Dec 2025)",
  "name": "{{PROJECT_NAME}}",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "docker compose watch",
    "build": "pnpm --filter='./apps/*' run build",
    "typecheck": "tsgo --project tsconfig.json",
    "test": "pnpm -r run test",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "lint": "oxlint --ignore-pattern 'node_modules/**'",
    "ast-check": "ast-grep scan",
    "check": "pnpm typecheck && pnpm format:check && pnpm lint && pnpm ast-check",
    "clean": "rm -rf packages/*/dist apps/*/dist **/*.tsbuildinfo",
    "prepare": "lefthook install || true"
  },
  "devDependencies": {
    "@ast-grep/cli": "0.40.3",
    "@biomejs/biome": "2.3.8",
    "@effect/vitest": "0.27.0",
    "@playwright/test": "1.57.0",
    "@types/node": "24.10.1",
    "@typescript/native-preview": "latest",
    "lefthook": "1.13.6",
    "oxlint": "1.35.0",
    "tsx": "4.19.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "pnpm": {
    "overrides": {
      "effect": "3.19.13",
      "@effect/platform": "0.94.0",
      "@effect/platform-node": "0.104.0",
      "@effect/vitest": "0.27.0",
      "@types/node": "24.10.1",
      "vitest": "4.0.15"
    }
  }
}
