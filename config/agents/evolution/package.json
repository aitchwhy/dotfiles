{
  "name": "@dotfiles/evolution",
  "version": "1.0.0",
  "description": "Self-evolving dotfiles system with TypeScript graders and SQLite storage",
  "type": "module",
  "scripts": {
    "grade": "bun run src/index.ts grade",
    "reflect": "bun run src/index.ts reflect",
    "audit": "bun run src/index.ts audit",
    "metrics": "bun run src/index.ts metrics",
    "migrate": "bun run scripts/migrate-jsonl.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome check .",
    "format": "bunx biome format --write ."
  },
  "dependencies": {
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "1.2.10",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": "1.3.4"
  }
}
