{
  "name": "@dotfiles/signet",
  "version": "2.0.0",
  "type": "module",
  "description": "Signet - Generate formally consistent software systems with hexagonal architecture (SSOT Dec 2025)",
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "start": "bun run src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "bunx oxlint src tests",
    "lint:fix": "bunx oxlint --fix src tests",
    "lint:ast": "sg scan",
    "test:rules": "sg test",
    "validate": "bun run typecheck && bun run lint && bun run lint:ast && vitest run"
  },
  "dependencies": {
    "effect": "3.19.9",
    "@effect/cli": "0.72.1",
    "@effect/platform": "0.93.6",
    "@effect/platform-node": "0.103.0",
    "@effect/platform-bun": "0.86.0",
    "@effect/printer": "0.47.0",
    "@effect/printer-ansi": "0.47.0",
    "zod": "4.1.13",
    "handlebars": "4.7.8",
    "oxc-parser": "0.101.0",
    "oxc-transform": "0.101.0",
    "@ast-grep/napi": "0.33.1",
    "yaml": "2.7.0",
    "better-auth": "1.4.6",
    "@temporalio/client": "1.13.0",
    "@temporalio/workflow": "1.13.0",
    "@temporalio/activity": "1.13.0",
    "@temporalio/worker": "1.13.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/sdk-trace-node": "2.2.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.57.0",
    "posthog-node": "5.14.1",
    "ioredis": "5.8.2",
    "@restatedev/restate-sdk": "1.9.1",
    "@pulumi/pulumi": "3.210.0",
    "@pulumi/gcp": "9.6.0",
    "@pulumi/random": "4.18.4",
    "@pulumi/policy": "1.20.0"
  },
  "devDependencies": {
    "oxlint": "1.32.0",
    "vitest": "4.0.15",
    "@vitest/ui": "4.0.15",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.2.10",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.3.4"
  }
}
